; data/db.{{ reverse_zone_name }}
; Zone file for {{ reverse_zone_name }}
;
$TTL    86400
@       IN      SOA     {{ zone_name }}. root.{{ zone_name }}. (
                              1         ; Serial
                         604800         ; Refresh
                          86400         ; Retry
                        2419200         ; Expire
                          86400 )       ; Negative Cache TTL
;
@               IN      NS      ns1.{{ zone_name }}.
{{ zone_primary_ns }} IN  PTR   ns1.{{ zone_name }}.
{% for address in addresses['a'] %}
{{ address.ip }} IN PTR {{ address.name }}.{{ zone_name }}
{% endfor %}
